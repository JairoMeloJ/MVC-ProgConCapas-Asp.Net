@using Microsoft.AspNet.Identity
    @{
        ViewBag.Title = "Index";
    }

    <div class="section animated-row" data-section="slide03">
        <div class="section-inner">
            <div class="welcome-box">
                <span class="welcome-first animate" data-animate="fadeInUp"> @Html.ActionLink("Bienvenido " + User.Identity.GetUserName() + " !", "Index", "Manage", htmlAttributes: new { title = "Manage" }) </span>

                <style type="text/css">
