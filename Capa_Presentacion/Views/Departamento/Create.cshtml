@model Capa_Entidad.Departamento

@{
    ViewBag.Title = "Creando";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="section animated-row" data-section="slide01">
        <div class="section-inner">
            <h4>Crear Departamento</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="section-inner">
                <label class="welcome-first animate">Departamento</label>
                <div class="welcome-box">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="section-inner">
                @Html.LabelFor(model => model.Siglas, htmlAttributes: new { @class = "welcome-first animate" })
                <div class="welcome-box">
                    @Html.EditorFor(model => model.Siglas, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Siglas, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-6 animate" data-animate="fadeInUp">
                <div class="input-field">
                    <input type="submit" value="Crear Departamento" class="btn" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
